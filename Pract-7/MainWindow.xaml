            </MenuItem>
        </Menu>
        <TextBox x:Name="result" HorizontalAlignment="Left" Height="32" Margin="33,152,0,0" IsReadOnly="True" TextWrapping="Wrap"  VerticalAlignment="Top" Width="160" RenderTransformOrigin="1.375,1.717"/>
        <GroupBox Header="Стороны треугольника" HorizontalAlignment="Left" Height="113" Margin="33,23,0,0" VerticalAlignment="Top" Width="160">
