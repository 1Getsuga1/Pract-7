        xmlns:local="clr-namespace:Pract_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="227.381" Width="228.571">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Найти гипотенузу" Click="FindHypotenuse_Click"/>
                <MenuItem Header="Найти площадь" Click="FindArea_Click"/>
                <MenuItem Header="О программе" Click="Information_Click"/>
